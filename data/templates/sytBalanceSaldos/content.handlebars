                    <td class="numero" style='padding-bottom: 0.35em;'>{{#numberWithCommas haber tipocuenta}}{{/numberWithCommas}}</td>
                    <td class="numero" style='padding-bottom: 0.35em;'>{{#numberWithCommas actual tipocuenta}}{{/numberWithCommas}}</td>
