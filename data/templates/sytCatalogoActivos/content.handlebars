<html>
    <head>
        <meta content="text/html; charset=utf-8" http-equiv="Content-Type">
        <style>
            .tipo{ font-family: Arial; }
            .tbl{ width: 50em; border-collapse:collapse; margin: 0 auto;}
            .cth{ text-align: right; font-weight: bold; width: 11em; }
            .ctd{ text-align: left; width: 41em; padding-left: 0.25em; }
            .num{ text-align: right; }
            .bld{ font-weight: bold; }
            /*.brd{ border: solid 0.1em #DCDCDC; }*/
            .brd{ border: 0; }
        </style>
    </head>
    <body class="tipo">
        {{#each activos}}
        <div style="width: 100%; text-align: center">
            <table class="tbl">
                <tr>
                    <td class="cth brd">Empresa:</td>
                    <td class="ctd brd">{{nomempresa}}</td>
                </tr>
                <tr>
                    <td class="cth brd">Finca-Folio-Libro:</td>
                    <td class="ctd brd">{{finca}}-{{folio}}{{libro}}</td>
                </tr>                
                <tr>
                    <td class="cth brd">Tipo:</td>
                    <td class="ctd brd">{{nombre_tipo_activo}}</td>
                </tr>
                <tr>
                    <td class="cth brd">Departamento:</td>
                    <td class="ctd brd">{{nombre_depto}}</td>
                </tr>
                <tr>
                    <td class="cth brd">Desc. Larga:</td>
                    <td class="ctd brd">{{nombre_largo}}</td>
                </tr>
                <tr>
                    <td class="cth brd">Desc. Corta:</td>
                    <td class="ctd brd">{{nombre_corto}}</td>
                </tr>
                <tr>
                    <td class="cth brd">Fecha de adquisici&oacute;n:</td>
                    <td class="ctd brd">{{#formatDate fechacompra}}{{/formatDate}}</td>
                </tr>                
                <tr>
                    <td class="cth brd">Base IUSI (Q):</td>
                    <td class="ctd brd">{{#nwc iusi}}{{/nwc}}</td>
                </tr>
                <tr>
                    <td class="cth brd">%IUSI:</td>
                    <td class="ctd brd">{{#nwc por_iusi}}{{/nwc}}</td>
                </tr>
                <tr>
                    <td class="cth brd">Direcci&oacute;n:</td>
                    <td class="ctd brd">{{direccion_mun}}, zona {{zona}}</td>
                </tr>
                <tr>
                    <td class="cth brd">Horizontal:</td>
                    <td class="ctd brd">{{eshorizontal}}</td>
                </tr>
                <tr>
                    <td class="brd" colspan="2" style="text-align:center">
                        <table style="width: 50%; border-collapse: collapse;">
                            <tr>
                                <td>&nbsp;</td>
                                <td class="num bld">Valor (Q)</td>
                                <td class="num bld">Metros</td>
                            </tr>
                            <tr>
                                <td class="cth">Propiedad:</td>
                                <td class="num">{{#nwc valor_registro}}{{/nwc}}</td>
                                <td class="num">{{#nwc metros_registro}}{{/nwc}}</td>
                            </tr>
                            <tr>
                                <td class="cth">DICABI:</td>
                                <td class="num">{{#nwc valor_dicabi}}{{/nwc}}</td>
                                <td class="num">{{#nwc metros_dicabi}}{{/nwc}}</td>
                            </tr>
                            <tr>
                                <td class="cth">Municipalidad:</td>
                                <td class="num">{{#nwc valor_muni}}{{/nwc}}</td>
                                <td class="num">{{#nwc metros_muni}}{{/nwc}}</td>
                            </tr>                            
                        </table>
                    </td>
                </tr>
            </table>
            <hr/>
        </div>
        {{/each}}
    </body>
</html>