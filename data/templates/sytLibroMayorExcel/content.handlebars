<table>
    <tr>
        <th colspan="7">
            {{empresa}}
        </th>
    </tr>
    <tr>
        <th colspan="7">
            Diario Mayor General
        </th>
    </tr>    
    <tr>
        <th colspan="7">
            Del {{formatDate del}} al {{formatDate al}}
        </th>
    </tr>    
    <tr><th colspan="7"></th></tr>
    <tr>
        <th style="text-align: left;" colspan="3">Código y nombre de la cuenta</th>
        <th>Anterior</th>
        <th>Debe</th>
        <th>Haber</th>
        <th>Saldo</th>
    </tr>
    <tr>
        <th>Fecha</th>
        <th>Referencia</th>
        <th>Transacción</th>
        <th></th>
        <th></th>
        <th></th>
        <th></th>
    </tr>
    {{#each cuentas}}
    <tr>
        <th>{{codigo}}</th>
        <th style="text-align: left;" colspan="2">{{nombrecta}}</th>
        <th>{{toFloat anterior}}</th>
        <th>{{toFloat debe}}</th>
        <th>{{toFloat haber}}</th>
        <th>{{toFloat actual}}</th>
    </tr>
    {{#each dlm}}
    <tr>
        <td>{{formatDate fecha}}</td>
        <td>{{referencia}}</td>
        <td>{{transaccion}}</td>
        <td></td>
        <td>{{toFloat debe}}</td>
        <td>{{toFloat haber}}</td>
        <td></td>
    </tr>
    {{/each}}
    {{#if @last}}
    {{else}}
    <tr>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
        <td></td>
    </tr>
    {{/if}}
    {{/each}}    
</table>